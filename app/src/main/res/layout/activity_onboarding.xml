<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnboardingActivity">

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/imageview_1"
        android:layout_width="91dp"
        android:layout_height="99dp"
        android:src="@drawable/gambar_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textvieuw02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Datang"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.102" />

    <ImageView
        android:id="@+id/img_02"
        android:layout_width="153dp"
        android:layout_height="156dp"
        android:scaleType="fitXY"
        android:src="@drawable/gambar_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textvieuw02"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="@+id/textvieuw02"
        app:layout_constraintTop_toBottomOf="@+id/textvieuw02"
        app:layout_constraintVertical_bias="0.084" />

    <TextView
        android:id="@+id/textvieuw2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kabupaten Maluku Tengah"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/img_02"
        app:layout_constraintStart_toStartOf="@+id/img_02"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <TextView
        android:id="@+id/textvieuw3"
        android:layout_width="289dp"
        android:layout_height="104dp"
        android:gravity="center"
        android:text="Selamat datang di Sinegerih, aplikasi yang akan membantu Anda dengan cepat dan mudah mengurus layanan adminstrasi anda"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textvieuw2"
        app:layout_constraintStart_toStartOf="@+id/textvieuw2"
        app:layout_constraintTop_toBottomOf="@+id/textvieuw2"
        app:layout_constraintVertical_bias="0.025" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnon_start"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shape_button"
        android:text="Mulai"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textvieuw3"
        app:layout_constraintStart_toStartOf="@+id/textvieuw3"
        app:layout_constraintTop_toBottomOf="@+id/textvieuw3"
        app:layout_constraintVertical_bias="0.042" />

    <ImageView
        android:id="@+id/imgon"
        android:layout_width="91dp"
        android:layout_height="99dp"
        android:scaleType="fitXY"
        android:src="@drawable/gambar_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>